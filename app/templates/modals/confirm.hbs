<ModalDialog>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true" aria-label="Dismiss">&times;</button>
    <h4 class="modal-title">Confirmation</h4>
  </div>
  <div class="modal-body">
    Are you sure?
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-primary" {{action "invokeAction" model.actions.ok}}>Yes</button>
    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
  </div>
</ModalDialog>